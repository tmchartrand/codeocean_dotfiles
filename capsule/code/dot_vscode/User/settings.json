{
    "window.autoDetectColorScheme": true,
    "search.useParentIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "autoDocstring.docstringFormat": "numpy-notypes",
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.askForKernelRestart": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.vscode": true,
        "**/*.egg-info": true
    },
    "python.languageServer": "Jedi",
    "git.autofetch": true,
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    // needed for glibc issues caused by pyarrow
    "terminal.integrated.env.linux": {
        "LD_LIBRARY_PATH": "/opt/conda/lib/"
    },
    "jupyter.runStartupCommands": [

        // "%load_ext autoreload",
        // "%autoreload 2"
    ],
    "editor.showFoldingControls": "always",
    "editor.foldingStrategy": "indentation",
    "files.watcherExclude": {
        "/root/capsule/.git/**": true,
        "/root/capsule/code/.vscode/**": true,
        "/root/capsule/data/**": true
    },
    "git.useIntegratedAskPass": false,
    "github.gitAuthentication": false,
    "git.confirmSync": false,
    "notebook.output.textLineLimit": 100,
    "notebook.output.scrolling": true,
    "window.menuBarVisibility": "classic",
    "workbench.colorTheme": "Default Dark Modern",
    "extensions.autoUpdate": false,
    "security.workspace.trust.untrustedFiles": "open",
    "jupyter.debugJustMyCode": false,
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.suggest.localityBonus": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.selectionMode": "whenQuickSuggestion",
    "editor.parameterHints.enabled": false,
    "files.refactoring.autoSave": false,
    "files.autoSaveDelay": 10000,
    "files.autoSave": "onFocusChange",
    "notebook.scrolling.revealNextCellOnExecute": "firstLine",
    "notebook.diff.ignoreMetadata": true,
    "notebook.stickyScroll.enabled": true,
    "notebook.diff.ignoreOutputs": true,
    "remote.autoForwardPortsSource": "hybrid",
    "editor.quickSuggestionsDelay": 20,
    "python.autoComplete.extraPaths": [
        "/capsule/code/"
    ],
    "remote.forwardOnOpen": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
}