{
    "search.useParentIgnoreFiles": true,
    "search.useGlobalIgnoreFiles": true,
    "autoDocstring.docstringFormat": "numpy-notypes",
    "jupyter.disableJupyterAutoStart": true,
    "jupyter.askForKernelRestart": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.vscode": true,
        "**/*.egg-info": true
    },
    "git.autofetch": true,
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    // needed for glibc issues caused by pyarrow
    "terminal.integrated.env.linux": {
        "LD_LIBRARY_PATH": "/opt/conda/lib/"
    },
    "jupyter.runStartupCommands": [
        "%load_ext autoreload",
        "%autoreload 2"
    ],
    "editor.showFoldingControls": "always",
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.git/objects/**": false,
        "**/.git/subtree-cache/**": false,
        "**/.vscode/**": true,
        "**/*.egg-info/**": true,
        "**/*.ipynb": true,
        "**/*.zarr/**": true,
        "**/data/**": true,
        "**/results/**": true,
        "**/scratch/**": true,
        "/opt/**": true
    },
    "git.useIntegratedAskPass": false,
    "github.gitAuthentication": false,
    "git.confirmSync": false,
    "notebook.output.textLineLimit": 100,
    "notebook.output.scrolling": true,
    "window.menuBarVisibility": "classic",
    "workbench.colorTheme": "Default Dark Modern",
    "extensions.autoUpdate": false,
    "security.workspace.trust.untrustedFiles": "open",
    "jupyter.debugJustMyCode": false,
    "editor.minimap.enabled": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.suggest.localityBonus": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.selectionMode": "whenQuickSuggestion",
    "editor.parameterHints.enabled": false,
    "files.refactoring.autoSave": false,
    "files.autoSaveDelay": 10000,
    "files.autoSave": "onFocusChange",
    "notebook.scrolling.revealNextCellOnExecute": "firstLine",
    "notebook.stickyScroll.enabled": true,
    "remote.autoForwardPortsSource": "hybrid",
    "editor.quickSuggestionsDelay": 20,
    "python.autoComplete.extraPaths": [
        "/root/capsule/code/"
    ],
    "remote.forwardOnOpen": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "gitlens.graph.layout": "editor",
    "gitlens.graph.minimap.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.virtualRepositories.enabled": false,
    "gitlens.advanced.fileHistoryShowAllBranches": true,
    "gitlens.changes.toggleMode": "window",
    "gitlens.mode.active": "zen",
    "gitlens.hovers.enabled": false,
    "python.analysis.extraPaths": [
        "/root/capsule/code/"
    ],
    "notebook.experimental.generate": true,
    "notebook.experimental.cellChat": true,
    "gitlens.graph.dimMergeCommits": true,
    "ruff.codeAction.disableRuleComment": {
        "enable": false
    },
    "debugpy.debugJustMyCode": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "notebook.diff.ignoreMetadata": true,
    "pylint.cwd": "${fileDirname}",
    "pylint.args": [
        "--disable=W0511"
    ],
    "editor.defaultFormatter": "charliermarsh.ruff",
    "notebook.experimental.remoteSave": true,
    "github.copilot.advanced": {
        
    },
    "outline.showModules": false,
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "git.autoStash": true,
    "editor.foldingStrategy": "indentation",
    "git.suggestSmartCommit": false,
    "workbench.editorLargeFileConfirmation": 30,
    "explorer.autoReveal": "focusNoScroll",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "liveshare.notebooks.allowGuestExecuteCells": true,
    "basedpyright.analysis.inlayHints.variableTypes": false,
    "basedpyright.analysis.inlayHints.functionReturnTypes": false,
    "problems.decorations.enabled": false,
    "basedpyright.analysis.exclude": [
        "results/**",
        "data/**",
        "scratch/**"
    ],
    "basedpyright.analysis.typeCheckingMode": "off",
    "editor.rulers": [
        90
    ],
}